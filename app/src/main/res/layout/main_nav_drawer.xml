<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/topMenu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:orientation="@integer/name">

        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="clickLogo"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="@dimen/image_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/user_margin_bottom"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textColor="#C3C0C0"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/emailHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#C3C0C0"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <View
        app:layout_constraintTop_toBottomOf="@id/topMenu"
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FDFCFC"/>

    <LinearLayout
        android:id="@+id/viands"
        app:layout_constraintTop_toBottomOf="@id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_line"
        android:gravity="center_vertical"
        android:onClick="clickViandas">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fastfood_menu"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_recommendation"
            android:padding="12dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/configuration"
        app:layout_constraintTop_toBottomOf="@id/viands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_line"
        android:gravity="center_vertical"
        android:onClick="clickConfig">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/configuration"
            android:padding="12dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logout"
        app:layout_constraintTop_toBottomOf="@id/configuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_line"
        android:gravity="center_vertical"
        android:onClick="clickLogout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/close_session"
            android:padding="12dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>